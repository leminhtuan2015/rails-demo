<%if (current_user != nil&&(
	current_user.following?(@entry.user)) ||
	 current_user.id == @entry.user.id)%>
  <%= form_for([@entry, @entry.comments.build]) do |f| %>
   <div class="form-group">
   <%= f.text_area :body, :class => "form-control", :placeholder=>"Your comments" %>
   </div>
   <div class="form-group">
     <%= f.submit "Comment", :class=>"btn btn-default" %>
   </div>
  <%end%>
<%end%>